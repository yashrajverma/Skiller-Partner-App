<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skiller_profile_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/ic_write"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:text="Edit Profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <View
        android:id="@+id/single_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="8dp"
        android:background="#FDB1AAAA" />

    <TextView
        android:id="@+id/work_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_work"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Work History"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/payment_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_money"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Payment History"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/share_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="10dp"
        android:drawableLeft="@drawable/ic_share"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Share App"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />


    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/roboto"
        android:padding="15dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textFontWeight="800"
        android:textSize="18sp" />


</LinearLayout>