<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images_9"
    android:orientation="vertical"
    tools:context="com.yashraj.skillerpartnerapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_icon" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto"
            android:text="Skiller Partners"
            android:textColor="#F44336"
            android:textSize="25sp"
            android:textStyle="bold" />


        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            app:ccp_autoDetectCountry="true"
            app:ccp_showFlag="true"
            app:ccp_showFullName="true">

        </com.hbb20.CountryCodePicker>

        <EditText
            android:id="@+id/log_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="3dp"
            android:drawableTint="@android:color/black"
            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#676767" />

        <EditText
            android:id="@+id/otp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="3dp"
            android:drawableTint="@android:color/black"
            android:hint="Enter OTP"
            android:inputType="number|numberPassword"
            android:maxLength="10"
            android:padding="15dp"
            android:textColor="#0C0C0C"
            android:textColorHint="#676767"
            android:visibility="gone" />


        <Button
            android:id="@+id/btn_get_otp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_background"
            android:padding="10dp"
            android:text="Get OTP"
            android:textAllCaps="false"
            android:textColor="#FDFAFA" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_background"
            android:padding="10dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#FDFAFA"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_background"
            android:padding="10dp"
            android:text="skip (Test)"
            android:textColor="#FDFAFA" />


        <TextView
            android:id="@+id/text_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-black"
            android:text="New User?"
            android:textColor="#0C0C0C"
            android:textSize="20sp" />
    </LinearLayout>


</ScrollView>